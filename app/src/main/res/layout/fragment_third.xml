<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.main.MainActivity"
    android:background="@color/backGroundColor">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/video_ytp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:autoPlay="false" />
    <TextView
        android:layout_below="@+id/video_ytp"
        android:background="@drawable/white_bg"
        android:padding="@dimen/_5sdp"
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        tools:text="Title"/>
    <RelativeLayout
        android:layout_below="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:visibility="gone"
            android:id="@+id/empty_content"
            layout="@layout/content_empty"/>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/refresh_srl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll_ns"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:padding="@dimen/spacing_medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/review_index_tv"
                        android:background="@drawable/white_bg"
                        android:padding="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:text="Review"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/review_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/review_index_tv"
                        android:scrollbars="vertical"
                        tools:listitem="@layout/item_review" />
                    <include
                        android:visibility="gone"
                        android:layout_below="@+id/review_rv"
                        android:id="@+id/loading_content"
                        layout="@layout/item_loading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </RelativeLayout>
</RelativeLayout>